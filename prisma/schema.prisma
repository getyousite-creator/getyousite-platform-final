/**
 * Prisma Schema - PostgreSQL with JSONB
 * 
 * Optimized for:
 * - Flexible site blueprints (JSONB)
 * - Soft deletes (deletedAt)
 * - Indexing for performance
 * - Partitioning-ready for analytics
 */

// This is your Prisma schema file
// Learn more: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// USER & AUTH
// ============================================================================

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  passwordHash  String
  name          String
  role          Role      @default(USER)
  emailVerified DateTime?
  
  // Relations
  sites         Site[]
  refreshTokens RefreshToken[]
  subscriptions Subscription[]
  
  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  deletedAt     DateTime? // Soft delete
  
  // Indexes
  @@index([email])
  @@index([deletedAt])
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  
  createdAt DateTime @default(now())
  
  @@index([userId])
  @@index([token])
}

enum Role {
  USER
  ADMIN
  PREMIUM
}

// ============================================================================
// SITE & BLUEPRINT
// ============================================================================

model Site {
  id          String   @id @default(cuid())
  name        String
  description String?
  vision      String?
  
  // JSONB for flexible blueprint storage
  blueprint   Json     @db.JsonB
  
  // Domain configuration
  customDomain String? @unique
  subdomain    String  @unique
  
  // Status
  status      SiteStatus @default(DRAFT)
  isPublished Boolean    @default(false)
  
  // Relations
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  deployments Deployment[]
  analytics   Analytics[]
  
  // Timestamps
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  deletedAt   DateTime? // Soft delete
  publishedAt DateTime?
  
  // Indexes
  @@index([userId])
  @@index([subdomain])
  @@index([customDomain])
  @@index([status])
  @@index([deletedAt])
}

enum SiteStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

// ============================================================================
// DEPLOYMENT
// ============================================================================

model Deployment {
  id           String   @id @default(cuid())
  siteId       String
  site         Site     @relation(fields: [siteId], references: [id])
  
  // Deployment info
  version      Int
  buildTime    Int? // in milliseconds
  buildStatus  BuildStatus @default(PENDING)
  
  // Vercel/Cloudflare IDs
  deploymentId String?
  vercelUrl    String?
  
  // Assets
  assets       Json? @db.JsonB // CDN URLs
  
  // Timestamps
  createdAt    DateTime @default(now())
  
  // Indexes
  @@index([siteId])
  @@index([buildStatus])
  @@index([createdAt])
}

enum BuildStatus {
  PENDING
  BUILDING
  SUCCESS
  FAILED
}

// ============================================================================
// ANALYTICS (Partitioning-ready)
// ============================================================================

model Analytics {
  id        String   @id @default(cuid())
  siteId    String
  site      Site     @relation(fields: [siteId], references: [id])
  
  // Event data
  eventType String // pageview, click, conversion, etc.
  eventData Json?   @db.JsonB // Flexible event data
  
  // Visitor info
  visitorId String?
  sessionId String?
  country   String?
  city      String?
  
  // Page info
  path      String?
  referrer  String?
  userAgent String?
  
  // Timestamps (for partitioning)
  createdAt DateTime @default(now())
  
  // Indexes
  @@index([siteId])
  @@index([eventType])
  @@index([createdAt])
  @@index([visitorId])
  
  // Note: For production with millions of rows, use table partitioning
  // CREATE TABLE "Analytics" PARTITION BY RANGE (createdAt)
}

// ============================================================================
// SUBSCRIPTION & BILLING
// ============================================================================

model Subscription {
  id             String   @id @default(cuid())
  userId         String
  user           User     @relation(fields: [userId], references: [id])
  
  // Plan info
  plan           PlanType @default(FREE)
  status         SubscriptionStatus @default(ACTIVE)
  
  // Billing
  stripeCustomerId String? @unique
  stripeSubscriptionId String? @unique
  
  // Limits
  sitesLimit     Int      @default(1)
  storageLimit   Int      @default(100) // MB
  
  // Timestamps
  currentPeriodStart DateTime @default(now())
  currentPeriodEnd   DateTime
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
  cancelledAt        DateTime?
  
  // Indexes
  @@index([userId])
  @@index([status])
}

enum PlanType {
  FREE
  PRO
  BUSINESS
  ENTERPRISE
}

enum SubscriptionStatus {
  ACTIVE
  INACTIVE
  CANCELLED
  PAST_DUE
}

// ============================================================================
// AUDIT LOGS (For security & compliance)
// ============================================================================

model AuditLog {
  id        String   @id @default(cuid())
  userId    String?
  action    String // CREATE, UPDATE, DELETE, LOGIN, etc.
  resource  String // USER, SITE, DEPLOYMENT, etc.
  resourceId String?
  
  // Change details
  oldValue  Json? @db.JsonB
  newValue  Json? @db.JsonB
  
  // Context
  ipAddress String?
  userAgent String?
  
  // Timestamps
  createdAt DateTime @default(now())
  
  // Indexes
  @@index([userId])
  @@index([action])
  @@index([resource])
  @@index([createdAt])
  
  // Note: Partition by createdAt for large-scale deployments
}

// ============================================================================
// API KEYS (For developer access)
// ============================================================================

model ApiKey {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  
  name        String
  key         String   @unique // Hashed
  prefix      String   // First 8 chars for identification
  
  // Permissions
  permissions String[] // ['sites:read', 'sites:write', etc.]
  
  // Usage
  lastUsedAt  DateTime?
  
  // Timestamps
  createdAt   DateTime @default(now())
  expiresAt   DateTime?
  
  // Indexes
  @@index([userId])
  @@index([key])
}
